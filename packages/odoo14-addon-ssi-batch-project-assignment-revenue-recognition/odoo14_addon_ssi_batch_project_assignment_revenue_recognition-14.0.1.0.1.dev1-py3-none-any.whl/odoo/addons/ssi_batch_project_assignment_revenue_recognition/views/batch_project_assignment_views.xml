<odoo>
<record id="project_batch_assignment_view_tree" model="ir.ui.view">
    <field name="name">project.batch_assignment tree</field>
    <field name="model">project.batch_assignment</field>
    <field
            name="inherit_id"
            ref="ssi_batch_project_assignment.project_batch_assignment_view_tree"
        />
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='project_id']" position="after">
                <field name="pob_id" />
                <field name="contract_id" />
            </xpath>
        </data>
    </field>
</record>




<record id="project_batch_assignment_view_search" model="ir.ui.view">
    <field name="name">project.batch_assignment search</field>
    <field name="model">project.batch_assignment</field>
    <field
            name="inherit_id"
            ref="ssi_batch_project_assignment.project_batch_assignment_view_search"
        />
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="pob_id" />
                <field name="contract_id" />
            </xpath>
            <xpath expr="//filter[@name='grp_company']" position="after">
                <filter name="grp_pob" string="# PoB" context="{'group_by':'pob_id'}" />
                <filter
                        name="grp_contract"
                        string="# Contract"
                        context="{'group_by':'contract_id'}"
                    />
            </xpath>
        </data>
    </field>
</record>

<record id="project_batch_assignment_view_form" model="ir.ui.view">
    <field name="name">project.batch_assignment form</field>
    <field name="model">project.batch_assignment</field>
    <field
            name="inherit_id"
            ref="ssi_batch_project_assignment.project_batch_assignment_view_form"
        />
    <field name="arch" type="xml">
      <data>
          <xpath expr="/form/sheet/notebook/page[last()]" position="after">
            <page name="revenue_recognition" string="Revenue Recognition">
                <group name="revenue_recognition_1" colspan="4" col="2">
                    <group name="revenue_recognition_1_1" colspan="1" col="2">
                        <field name="pob_id" />
                        <field name="contract_id" />
                    </group>
                    <group name="revenue_recognition_1_2" colspan="1" col="2">
                    </group>
                </group>
            </page>
          </xpath>
      </data>
    </field>
</record>
</odoo>

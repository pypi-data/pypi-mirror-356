<odoo>
    <record
        id="inherit_account_analytic_distribution_model_tree_view"
        model="ir.ui.view"
    >
        <field name="name">account.analytic.distribution.model.tree.inherit</field>
        <field name="model">account.analytic.distribution.model</field>
        <field
            name="inherit_id"
            ref="analytic.account_analytic_distribution_model_tree_view"
        />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="before">
                <field name="start_date" />
                <field name="end_date" />
            </xpath>
            <xpath expr="//field[@name='analytic_distribution']" position="after">
                <field name="recalculate" widget="boolean_toggle" />
                <button
                    name="action_sync_lines"
                    type="object"
                    string="Sync"
                    class="btn-secondary"
                    column_invisible="not recalculate"
                    help="Sync the journal items with the analytic distribution model. Used to sync lines that were generated before the model was created."
                />
                <button
                    name="action_recalculate_analytic_lines"
                    type="object"
                    string="Recalculate"
                    class="btn-primary"
                    column_invisible="not recalculate"
                />
            </xpath>
        </field>
    </record>

    <record
        id="inherit_account_analytic_distribution_model_form_view"
        model="ir.ui.view"
    >
        <field name="name">account.analytic.distribution.model.form.inherit</field>
        <field name="model">account.analytic.distribution.model</field>
        <field
            name="inherit_id"
            ref="analytic.account_analytic_distribution_model_form_view"
        />
        <field name="arch" type="xml">
            <xpath
                expr="//group[field[@name='analytic_distribution']]"
                position="after"
            >
                <group string="Filter Dates" colspan="2">
                    <field name="start_date" />
                    <field name="end_date" />
                </group>
            </xpath>
        </field>
    </record>

    <record id="action_recalculate_analytic_distribution" model="ir.actions.server">
        <field name="name">Recalculate Analytic Lines</field>
        <field
            name="model_id"
            ref="account_analytic_distribution_model_recalculate.model_account_analytic_distribution_model"
        />
        <field name="groups_id" eval="[(4, ref('account.group_account_user'))]" />
        <field name="state">code</field>
        <field name="code">action = records.action_recalculate_analytic_lines()</field>
        <field
            name="binding_model_id"
            ref="account_analytic_distribution_model_recalculate.model_account_analytic_distribution_model"
        />
    </record>
</odoo>

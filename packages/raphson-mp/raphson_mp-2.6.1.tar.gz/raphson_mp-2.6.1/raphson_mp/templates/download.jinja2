{% set title = gettext("Music downloader") %}
{% set back_url = "/" %}
{% set script = "download" %}
{% extends "base_static.jinja2" %}

{% block content %}

<div class="form form-wide">
    <label for="download-url">{% trans %}URL or search query{% endtrans %}</label>
    <input id="download-url" type="text">

    <label for="download-playlist">{% trans %}Playlist{% endtrans %}</label>
    <select id="download-playlist">
    {% for playlist, write in playlists %}
        {% if write %}
            <option name="{{ playlist }}" {% if playlist == primary_playlist %}selected{% endif %}>{{ playlist }}</option>
        {% endif %}
    {% endfor %}
    </select>

    <button id="download-button">{% trans %}Download{% endtrans %}</button>
    <div hidden id="download-loading" class="icon icon-loading spinning"></div>

    <div id="download-log" class="logbox"></div>
</div>

{% endblock content %}

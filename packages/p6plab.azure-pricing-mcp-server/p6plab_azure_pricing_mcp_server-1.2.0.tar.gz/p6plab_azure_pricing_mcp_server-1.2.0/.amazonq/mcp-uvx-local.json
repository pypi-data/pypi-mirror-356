{
  "mcpServers": {
    "azure-pricing-mcp-server-local-debug": {
      "command": "uvx",
      "args": ["--from", "./dist/p6plab_azure_pricing_mcp_server-1.1.0-py3-none-any.whl", "p6plab.azure-pricing-mcp-server"],
      "env": {
        "MCP_DEBUG_LOGGING": "true",
        "MCP_LOG_LEVEL": "DEBUG",
        "MCP_LOG_FORMAT": "json",
        "MCP_LOG_FILE": "./logs/azure-pricing-mcp-server.log",
        "FASTMCP_LOG_LEVEL": "DEBUG",
        "DEFAULT_CURRENCY": "USD",
        "DEFAULT_REGION": "eastus"
      },
      "timeout": 120000
    },
    "azure-pricing-mcp-server-local-production": {
      "command": "uvx",

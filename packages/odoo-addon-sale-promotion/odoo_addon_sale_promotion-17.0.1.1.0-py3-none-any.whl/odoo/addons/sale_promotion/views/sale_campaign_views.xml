<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	<record id="view_campaign_form_view" model="ir.ui.view">
		<field name="name">view.campaign.form.view</field>
		<field name="model">sale.campaign</field>
		<field name="arch" type="xml">
		<form string="Campaign">
			<sheet>
				<widget
                        name="web_ribbon"
                        title="Archived"
                        bg_color="text-bg-danger"
                        invisible="active"
                    />
				<div class="oe_title">
					<h1><field name="name" placeholder="Name" /></h1>
					<field name="active" invisible="1" />
				</div>
				<group name="main">
					<group>
						<field name="start_date" />
					</group>
					<group>
						<field name="end_date" />
					</group>
				</group>
				<group>
					<field
                            name="pricelist_ids"
                            widget="many2many_tags"
                            options="{'no_create_edit': True}"
                        />
					<field
                            name="product_campaign_ids"
                            widget="many2many_tags"
                            options="{'no_create_edit': True}"
                        />
				</group>
			</sheet>
		</form>
		</field>
	</record>
	<record id="view_campaign_tree_view" model="ir.ui.view">
		<field name="name">view.campaign.tree.view</field>
		<field name="model">sale.campaign</field>
		<field name="arch" type="xml">
			<tree>
				<field name="name" />
				<field name="start_date" />
				<field name="end_date" />
				<field
                    name="pricelist_ids"
                    widget="many2many_tags"
                    options="{'no_create_edit': True}"
                />
				<field
                    name="product_campaign_ids"
                    widget="many2many_tags"
                    options="{'no_create_edit': True}"
                />
			</tree>
		</field>
	</record>
	<record id="campaign_action" model="ir.actions.act_window">
		<field name="name">Campaigns</field>
		<field name="res_model">sale.campaign</field>
		<field name="view_mode">tree,form</field>
		<field name="help" type="html">
			<p class="oe_view_nocontent_create">
				Click to create a new Campaign.
			</p>
		</field>
	</record>
	<menuitem
        id="campaign_menu"
        parent="sale.product_menu_catalog"
        action="campaign_action"
        sequence="20"
    />
</odoo>

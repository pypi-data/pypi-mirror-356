<odoo>
    <record id="sale_promotion_view_order_form" model="ir.ui.view">
        <field name="name">sale.promotion.view.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='order_line']//tree//field[@name='price_total']"
                position="after"
            >
                <field name="product_campaign_id" optional="hide" string="Promotion" />
                <button
                    string="Apply Promotion"
                    name="action_apply_promotion"
                    type="object"
                />
            </xpath>
            <div name="so_button_below_order_lines" position="inside">
                <button
                    string="Apply Promotion"
                    name="action_apply_promotion"
                    type="object"
                    invisible="state == 'cancel' or locked"
                />
            </div>
        </field>
    </record>
</odoo>

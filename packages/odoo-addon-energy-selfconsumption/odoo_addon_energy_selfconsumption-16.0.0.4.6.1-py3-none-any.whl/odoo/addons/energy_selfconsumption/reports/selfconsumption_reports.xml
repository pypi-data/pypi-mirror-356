            <field name="report_file">Power Sharing Agreement</field>
            <!-- <field name="paperformat">custom_paperformat_id</field> -->
            <field
        name="binding_model_id"
        ref="energy_selfconsumption.model_energy_selfconsumption_selfconsumption"
      />

     xmlns:metal="http://xml.zope.org/namespaces/metal"
     xmlns:tal="http://xml.zope.org/namespaces/tal"
     tal:attributes="
       class view/css_class|nothing;
     "
>
  <h3 tal:replace="structure view/heading|nothing"></h3>

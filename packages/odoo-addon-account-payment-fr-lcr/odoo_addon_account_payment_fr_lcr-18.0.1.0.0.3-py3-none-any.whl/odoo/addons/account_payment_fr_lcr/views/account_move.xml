<odoo>
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account_payment_fr_lcr.view_move_form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account_payment_batch_oca.view_move_form" />
        <field name="arch" type="xml">
            <button name="action_register_payment" position="before">
                <button
                    name="fr_lcr_print"
                    type="object"
                    string="Print Bill of Exchange"
                    invisible="payment_method_line_fr_lcr_type != 'accepted' or state != 'posted' or payment_state not in ('partial', 'not_paid') or move_type != 'out_invoice'"
                />
            </button>
            <field name="show_reset_to_draft_button" position="after">
                <field name="payment_method_line_fr_lcr_type" invisible="1" />
            </field>
            <field name="preferred_payment_method_line_id" position="after">
                <field
                    name="fr_lcr_partner_bank_id"
                    invisible="payment_method_code != 'fr_lcr' or move_type != 'out_invoice'"
                    readonly="state != 'draft'"
                />
            </field>
        </field>
    </record>
</odoo>

<?xml version="1.0" encoding="UTF-8"?>
<IDSs xmlns:fn="http://www.w3.org/2005/02/xpath-functions">
   <version name="version">0.0.1</version>
   <IDS name="minimal"
        maxoccur="1"
        documentation="A minimal test IMAS-Python Data Structure (IDS)"
        lifecycle_status="alpha"
        lifecycle_version="0.0.1"
        lifecycle_last_change="0.0.1">
      <field name="ids_properties"
              structure_reference="self"
              path="ids_properties"
              path_doc="ids_properties"
              documentation="Interface Data Structure properties. This element identifies the node above as an IDS"
              data_type="structure">
         <field name="comment"
                 path="ids_properties/comment"
                 path_doc="ids_properties/comment"
                 documentation="Any comment describing the content of this IDS"
                 data_type="STR_0D"
                 type="constant"/>
         <field name="homogeneous_time"
                 path="ids_properties/homogeneous_time"
                 path_doc="ids_properties/homogeneous_time"
                 documentation="This node must be filled (with 0, 1, or 2) for the IDS to be valid. If 1, the time of this IDS is homogeneous, i.e. the time values for this IDS are stored in the time node just below the root of this IDS. If 0, the time values are stored in the various time fields at lower levels in the tree. In the case only constant or static nodes are filled within the IDS, homogeneous_time must be set to 2"
                 data_type="INT_0D"
                 type="constant"/>
         <field name="source"
                 path="ids_properties/source"
                 path_doc="ids_properties/source"
                 documentation="Source of the data (any comment describing the origin of the data : code, path to diagnostic signals, processing method, ...)"
                 data_type="STR_0D"
                 type="constant"/>
         <field name="provider"
                 path="ids_properties/provider"
                 path_doc="ids_properties/provider"
                 documentation="Name of the person in charge of producing this data"
                 data_type="STR_0D"
                 type="constant"/>
         <field name="creation_date"
                 path="ids_properties/creation_date"
                 path_doc="ids_properties/creation_date"
                 documentation="Date at which this data has been produced"
                 data_type="STR_0D"
                 type="constant"/>
         <field name="version_put"
                 structure_reference="version_dd_al"
                 path="ids_properties/version_put"
                 documentation="Version of the access layer package used to PUT this IDS"
                 data_type="structure"
                 path_doc="ids_properties/version_put">
            <field name="data_dictionary"
                    path="ids_properties/version_put/data_dictionary"
                    path_doc="ids_properties/version_put/data_dictionary"
                    documentation="Version of Data Dictionary used to PUT this IDS"
                    data_type="STR_0D"
                    type="constant"/>
            <field name="access_layer"
                    path="ids_properties/version_put/access_layer"
                    path_doc="ids_properties/version_put/access_layer"
                    documentation="Version of Access Layer used to PUT this IDS"
                    data_type="STR_0D"
                    type="constant"/>
            <field name="access_layer_language"
                    path="ids_properties/version_put/access_layer_language"
                    path_doc="ids_properties/version_put/access_layer_language"
                    documentation="Programming language of the Access Layer high level API used to PUT this IDS"
                    data_type="STR_0D"
                    type="constant"/>
         </field>
      </field>
      <!-- all 'simple' datatypes, i.e. no structures. Collected from IMAS DD 3.30.0 -->
      <!-- floats -->
      <field name="flt_0d"
             path="flt_0d"
             data_type="FLT_0D"/>
      <field name="flt_1d"
             path="flt_1d"
             data_type="FLT_1D"
             coordinate1="1...3"/>
      <field name="flt_2d"
             path="flt_2d"
             data_type="FLT_2D"
             coordinate1="1...N"
             coordinate1_same_as="flt_1d"
             coordinate2="1...N"/>
      <field name="flt_3d"
             path="flt_3d"
             data_type="FLT_3D"
             coordinate1="flt_1d"
             coordinate2="1...N"
             coordinate3="1...2"/>
      <field name="flt_4d"
             path="flt_4d"
             data_type="FLT_4D"
             coordinate1="flt_1d"
             coordinate2="int_1d"
             coordinate3="1...3"
             coordinate4="1...4"/>
      <field name="flt_5d"
             path="flt_5d"
             data_type="FLT_5D"/>
      <field name="flt_6d"
             path="flt_6d"
             data_type="FLT_6D"/>

       <field name="cpx_0d"
              path="cpx_0d"
              data_type="CPX_0D"/>
       <field name="cpx_1d"
              path="cpx_1d"
              data_type="CPX_1D"
              coordinate1="int_1d OR flt_1d"/>
       <field name="cpx_2d"
              path="cpx_2d"
              data_type="CPX_2D"/>
       <field name="cpx_3d"
              path="cpx_3d"
              data_type="CPX_3D"/>
       <field name="cpx_4d"
              path="cpx_4d"
              data_type="CPX_4D"/>
       <field name="cpx_5d"
              path="cpx_5d"
              data_type="CPX_5D"/>
       <field name="cpx_6d"
              path="cpx_6d"
              data_type="CPX_6D"/>

      <!-- strings -->
      <field name="str_0d"
             path="str_0d"
             data_type="STR_0D"/>
      <field name="str_1d"
             path="str_1d"
             data_type="STR_1D"/>

      <!-- ints -->
      <field name="int_0d"
             path="int_0d"
             data_type="INT_0D"/>
      <field name="int_1d"
             path="int_1d"
             data_type="INT_1D"/>
      <field name="int_2d"
             path="int_2d"
             data_type="INT_2D"/>
      <field name="int_3d"
             path="int_3d"
             data_type="INT_3D"/>

      <!-- legacy -->
      <field name="flt_type"
             path="flt_type"
             data_type="flt_type"/>
      <field name="flt_1d_type"
             path="flt_1d_type"
             data_type="flt_1d_type"/>
      <field name="int_type"
             path="int_type"
             data_type="int_type"/>
      <field name="str_type"
             path="str_type"
             data_type="str_type"/>
      <field name="str_1d_type"
             path="str_1d_type"
             data_type="str_1d_type"/>
   </IDS>
</IDSs>

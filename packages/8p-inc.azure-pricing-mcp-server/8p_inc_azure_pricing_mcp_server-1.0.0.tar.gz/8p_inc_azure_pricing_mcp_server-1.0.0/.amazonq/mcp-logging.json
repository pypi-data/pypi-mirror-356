{
  "mcpServers": {
    "azure-pricing-mcp-server-debug": {
      "command": "uvx",
      "args": ["8p-inc.azure-pricing-mcp-server@latest"],
      "env": {
        "MCP_DEBUG_LOGGING": "true",
        "MCP_LOG_LEVEL": "DEBUG",
        "MCP_LOG_FORMAT": "json",
        "MCP_LOG_FILE": "./logs/azure-pricing-mcp-debug.log",
        "FASTMCP_LOG_LEVEL": "DEBUG",
        "DEFAULT_CURRENCY": "USD",
        "DEFAULT_REGION": "eastus"
      },
      "timeout": 120000
    },
    "azure-pricing-mcp-server-production": {
      "command": "uvx",
      "args": ["8p-inc.azure-pricing-mcp-server@latest"],
      "env": {
        "MCP_DEBUG_LOGGING": "false",
        "MCP_LOG_LEVEL": "INFO",
        "MCP_LOG_FORMAT": "json",
        "MCP_LOG_FILE": "./logs/azure-pricing-mcp-production.log",
        "FASTMCP_LOG_LEVEL": "INFO",
        "DEFAULT_CURRENCY": "USD",
        "DEFAULT_REGION": "eastus"
      },
      "timeout": 60000
    },
    "azure-pricing-mcp-server-troubleshoot": {
      "command": "uvx",
      "args": ["8p-inc.azure-pricing-mcp-server@latest"],
      "env": {
        "MCP_DEBUG_LOGGING": "true",
        "MCP_LOG_LEVEL": "DEBUG",
        "MCP_LOG_FORMAT": "plain",
        "MCP_LOG_FILE": "./logs/azure-pricing-mcp-troubleshoot.log",
        "FASTMCP_LOG_LEVEL": "DEBUG",
        "DEFAULT_CURRENCY": "USD",
        "DEFAULT_REGION": "eastus",
        "AZURE_PRICING_API_BASE_URL": "https://prices.azure.com/api/retail/prices",
        "CACHE_TTL_SECONDS": "1800",
        "REQUEST_TIMEOUT": "45"
      },
      "timeout": 180000
    },
    "azure-pricing-mcp-server-console-only": {
      "command": "uvx",
      "args": ["8p-inc.azure-pricing-mcp-server@latest"],
      "env": {
        "MCP_DEBUG_LOGGING": "false",
        "MCP_LOG_LEVEL": "INFO",
        "MCP_LOG_FORMAT": "plain",
        "FASTMCP_LOG_LEVEL": "INFO",
        "DEFAULT_CURRENCY": "EUR",
        "DEFAULT_REGION": "westeurope"
      },
      "timeout": 60000
    },
    "azure-pricing-mcp-server-minimal": {
      "command": "uvx",
      "args": ["8p-inc.azure-pricing-mcp-server@latest"],
      "env": {
        "MCP_DEBUG_LOGGING": "false",
        "MCP_LOG_LEVEL": "WARNING",
        "MCP_LOG_FORMAT": "json",
        "MCP_LOG_FILE": "./logs/azure-pricing-mcp-minimal.log",
        "FASTMCP_LOG_LEVEL": "WARNING",
        "DEFAULT_CURRENCY": "USD",
        "DEFAULT_REGION": "eastus"
      },
      "timeout": 30000
    }
  }
}

# Azure Pricing MCP Server Logging Configuration
# Copy this file to .env or set these environment variables in your shell

# Enable/disable debug logging (logs all requests, responses, and internal processes)
# Values: true, false
MCP_DEBUG_LOGGING=false

# Set the logging level
# Values: DEBUG, INFO, WARNING, ERROR, CRITICAL
MCP_LOG_LEVEL=INFO

# Set the log output format
# Values: json (structured), plain (human-readable)
MCP_LOG_FORMAT=json

# Optional: Set a log file path (if not set, logs only to console)
# The directory will be created if it doesn't exist
# Example: MCP_LOG_FILE=/var/log/azure-pricing-mcp/server.log
# MCP_LOG_FILE=

# Legacy FastMCP log level (for backward compatibility)
FASTMCP_LOG_LEVEL=INFO

# Default Azure configuration
DEFAULT_CURRENCY=USD
DEFAULT_REGION=eastus

# Example configurations for different scenarios:

# Development/Debugging:
# MCP_DEBUG_LOGGING=true
# MCP_LOG_LEVEL=DEBUG
# MCP_LOG_FORMAT=plain
# MCP_LOG_FILE=./logs/debug.log

# Production:
# MCP_DEBUG_LOGGING=false
# MCP_LOG_LEVEL=INFO
# MCP_LOG_FORMAT=json
# MCP_LOG_FILE=/var/log/azure-pricing-mcp/server.log

# Troubleshooting:
# MCP_DEBUG_LOGGING=true
# MCP_LOG_LEVEL=DEBUG
# MCP_LOG_FORMAT=json
# MCP_LOG_FILE=./logs/troubleshoot.log
